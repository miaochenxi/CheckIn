<Window x:Class="CheckInWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckInWpf" xmlns:controls="clr-namespace:AForge.Controls;assembly=AForge.Controls"
        mc:Ignorable="d"
        Title="软创签到系统" Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="217*"/>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="62*"/>
        </Grid.RowDefinitions>

        <WindowsFormsHost Background="Transparent" Grid.Row="1">
            <controls:VideoSourcePlayer x:Name="videosourceplayer"></controls:VideoSourcePlayer>
        </WindowsFormsHost>
        <ListView x:Name="list" Grid.Column="1" ItemsSource="{Binding}" Background="#FFF3F3F3" HorizontalContentAlignment="Left" FontSize="24" Grid.RowSpan="3"/>
        <Label x:Name="date" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="92px" Height="141" Width="300" Grid.Row="1" Grid.RowSpan="2"/>
        <Button x:Name="btn" Content="签到" HorizontalAlignment="Center" Height="34" Margin="0,50,0,0" Grid.Row="2" VerticalAlignment="Top" Width="82" Click="check"/>
        <Label Content="" x:Name="notice" HorizontalAlignment="Center" Margin="0,89,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="16"/>
    </Grid>
</Window>
